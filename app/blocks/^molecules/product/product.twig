<div class="swiper product-slider">
  <div class="swiper-wrapper">
    {% for item in item.slides %}
      <div class="swiper-slide">
        <article class="product-slider__card">
          {% view "@image" with {
            image: item.image|merge({
              picture: {
                class: "product-slider__picture"
              },
              class: "product-slider__img",
              lazy: false
            })
          } %}

          <div class="product-slider__content">
            <h3 class="product-slider__title">
              {{ item.content.title }}
            </h3>
            <p class="product-slider__size">
              {{ item.content.size }}
            </p>
            <p class="product-slider__text">
              {{ item.content.text }}
            </p>
            <p class="product-slider__price">
              {{ item.content.price }}
            </p>
            <button class="btn product-slider__mobile-btn js-modal-btn" data-modal="buy">
              Купить
              {% view "@icon" with {
                icon: {
                  class: "product-slider__mobile-btn-icon",
                  name: "sprite-mono.svg#arrow"
                }
              } %}
            </button>
          </div>
          <button class="btn product-slider__btn js-modal-btn" data-modal="buy">
            Купить
          </button>
        </article>
      </div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</div>