<div class="promo">
  <div class="container promo__container">
    <div class="promo__wrap">
      {% view "@image" with {
        image: promo.first_image|merge({
          picture: {
            class: "promo__first-picture"
          },
          class: "promo__first-img",
          lazy: false
        })
      } %}

      <p class="promo__text">
        {{ promo.text }}
      </p>

      <h1 class="title promo__title animate-title">
        <div class="animate-title__parent">
          <div class="animate-title__child">{{ promo.title.text_1 }}</div>
        </div>
        <div class="animate-title__parent">
          <div class="animate-title__child">{{ promo.title.text_2 }}</div>
        </div>
      </h1>
    </div>

    {% view "@image" with {
      image: promo.second_image|merge({
        picture: {
          class: "promo__second-picture"
        },
        class: "promo__second-img",
        lazy: false
      })
    } %}
  </div>
</div>
